<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="770.0" prefWidth="850.0" styleClass="create_client_container" stylesheets="@../../styles/createclient.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.jmc.mazebank.controllers.admin.CreateClientController">
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create New Client Account" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" />
    <VBox fillWidth="false" layoutX="14.0" layoutY="42.0" prefHeight="700.0" prefWidth="600.0" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="40.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name" />
        <TextField fx:id="first_name_field" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name" />
        <TextField fx:id="last_name_field" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
        <TextField fx:id="password_field" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Payee Address" />
        <CheckBox fx:id="payee_address_box" mnemonicParsing="false" />
        <Label fx:id="payee_address_label" styleClass="payee_address_label" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Accounts" />
        <CheckBox fx:id="savings_account_box" mnemonicParsing="false" text="Add Savings Account" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Savings Account Balance" />
        <TextField fx:id="savings_account_amount_field" />
        <CheckBox fx:id="pension_account_box" mnemonicParsing="false" text="Add Pension Account" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pension Account Balance" />
        <TextField fx:id="pension_account_amount_field" />
        <Button fx:id="create_client_button" mnemonicParsing="false" text="Create New Client" />
        <Label fx:id="error_label" styleClass="error_label" />
    </VBox>
</AnchorPane>
